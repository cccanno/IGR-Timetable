<Alloy>
	<Window id="selectWin">
		<View id="navView">
			<Button id="backBtn" onClick="closeWin" />
			<Label id="title">駅を選択</Label>
			<Label id="lineName" />
			<Button id="mapBtn" onClick="openMap" />
		</View>
		<View id="line" />
		<ListView id="listView" onItemclick="focusStationList">
			<Templates>
				<ItemTemplate name="selectTemplate">
					<Label bindId="name" id="name" />
				</ItemTemplate>
			</Templates>
			<ListSection id="listSection" />
		</ListView>
	</Window>
</Alloy>
